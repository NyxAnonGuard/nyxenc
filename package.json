  "bugs": {
    "url": "https://github.com/nyxanonguard/nyxenc/issues"
  },
  "dependencies": {
    "@noble/ed25519": "^2.0.0",
    "@solana/spl-memo": "^0.2.5",
    "@solana/web3.js": "^1.87.6",
    "bs58": "^5.0.0",
    "crypto-js": "^4.2.0",
    "nyxenc": "^1.0.0"
